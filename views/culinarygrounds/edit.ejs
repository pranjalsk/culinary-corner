<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%=culinaryground.name%></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/culinarygrounds/<%=culinaryground._id%>?_method=PUT" method="POST">
                <div class="form-group"><input class="form-control" type="text" value="<%=culinaryground.name%>" name="culinaryground[name]"></div>
                <div class="form-group"><input class="form-control" type="number" value="<%=culinaryground.price%>" name="culinaryground[price]" min="0.01" step="0.01"></div>
                <div class="form-group"><input class="form-control" type="text" value="<%=culinaryground.image%>" name="culinaryground[image]"></div>
                <div class="form-group"><input class="form-control" type="text" value="<%=culinaryground.desc%>" name="culinaryground[desc]"></div>
                <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit</button></div>
            </form>
            <a href="/culinarygrounds">Go Back</a>
        </div>    
    </div>    
</div>




<% include ../partials/footer %>